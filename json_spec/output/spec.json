{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/opencomputeproject/ocp-diag-core/output",
    "title": "OutputArtifact",
    "description": "TODO: link to spec md link",
    "properties": {
        "sequenceNumber": {
            "description": "TODO: link to spec md link",
            "type": "integer",
            "minimum": 0,
            "maximum": 2147483647
        },
        "timestamp": {
            "description": "TODO: link to spec md link",
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "sequenceNumber",
        "timestamp"
    ],
    "oneOf": [
        {
            "properties": {
                "schemaVersion": {
                    "description": "TODO: link to spec md link",
                    "$ref": "#/$defs/schemaVersion"
                }
            },
            "required": [
                "schemaVersion"
            ]
        },
        {
            "properties": {
                "testRunArtifact": {
                    "description": "TODO: link to md",
                    "$ref": "/opencomputeproject/ocp-diag-core/testRunArtifact"
                }
            },
            "required": [
                "testRunArtifact"
            ]
        },
        {
            "properties": {
                "testStepArtifact": {
                    "description": "TODO: link to md",
                    "$ref": "/opencomputeproject/ocp-diag-core/testStepArtifact"
                }
            },
            "required": [
                "testStepArtifact"
            ]
        }
    ],
    "$defs": {
        "schemaVersion": {
            "properties": {
                "major": {
                    "const": 2
                },
                "minor": {
                    "const": 0
                }
            },
            "required": [
                "major",
                "minor"
            ]
        },
        "testStepArtifact": {
            "properties": {
                "testStepId": {
                    "description": "...",
                    "type": "string"
                },
                "testStepStart": {
                    "$ref": "#/$defs/testStepStart"
                },
                "testStepEnd": {
                    "$ref": "#/$defs/testStepEnd"
                },
                "error": {
                    "description": "TODO: link to md",
                    "$ref": "/opencomputeproject/ocp-diag-core/error"
                },
                "log": {
                    "description": "TODO: link to md",
                    "$ref": "/opencomputeproject/ocp-diag-core/log"
                },
                "measurement": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/measurements#/$defs/measurement"
                },
                "measurementSeriesStart": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/measurements#/$defs/measurementSeriesStart"
                },
                "measurementSeriesEnd": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/measurements#/$defs/measurementSeriesEnd"
                },
                "measurementElement": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/measurements#/$defs/measurementElement"
                },
                "diagnosis": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/diagnosis#/$defs/diagnosis"
                },
                "file": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/files#/$defs/file"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "testStepId",
                        "testStepStart"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "testStepEnd"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "error"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "log"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "measurement"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "measurementSeriesStart"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "measurementSeriesEnd"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "measurementElement"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "diagnosis"
                    ]
                },
                {
                    "required": [
                        "testStepId",
                        "file"
                    ]
                }
            ]
        },
        "testStepStart": {
            "properties": {
                "name": {
                    "description": "Name of this test step",
                    "type": "string"
                }
            },
            "timestampMs": {
                "description": "Timestamp, ms precision",
                "type": "string",
                "format": "date-time"
            },
            "required": [
                "name"
            ]
        },
        "testStepEnd": {
            "properties": {
                "name": {
                    "description": "Name of this test step",
                    "type": "string"
                },
                "status": {
                    "description": "Status of this test",
                    "type": "string",
                    "enum": [
                        "UNKNOWN",
                        "COMPLETE",
                        "ERROR",
                        "SKIPPED"
                    ]
                },
                "timestampMs": {
                    "description": "Timestamp, ms precision",
                    "type": "string",
                    "format": "date-time"
                },
                "additionalDetails": {
                    "$ref": "/opencomputeproject/ocp-diag-core/extensions/step_details#/$defs/stepDetails"
                }
            },
            "required": [
                "name",
                "status"
            ]
        }
    }
}